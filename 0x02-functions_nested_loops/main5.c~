#include "holberton.h"
/**
 * print_sign - shows if n is postive or negitive
 *@n: is the number it is checking
 * Return: 1 if greater than zero, 0 if zero and -1 if less then zero
 */
int print_sign(int n)
{
	int i;

	if (n > 0)
	{
		i = 1;
	}
	else if(n == 0)
	{
		i = 0;
	}
	else
	{
		i = -1;
	}
	return (i);
}
